<?xml version="1.0" encoding="utf-8"?><navigation xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/navigation"    app:startDestination="@id/splashFragment">    <fragment        android:id="@+id/splashFragment"        android:name="uz.coder.dagger2example.ui.splash.SplashFragment"        android:label="fragment_splash"        tools:layout="@layout/fragment_splash" >        <action            android:id="@+id/action_splashFragment_to_onboardingFragment"            app:destination="@id/onboardingFragment" />    </fragment>    <fragment        android:id="@+id/onboardingFragment"        android:name="uz.coder.dagger2example.ui.splash.BoardingFragment"        android:label="fragment_onboarding"        tools:layout="@layout/fragment_boarding" >        <action            android:id="@+id/action_onboardingFragment_to_welcomeFragment"            app:destination="@id/welcomeFragment" />    </fragment>    <fragment        android:id="@+id/welcomeFragment"        android:name="uz.coder.dagger2example.ui.splash.WelcomeFragment"        android:label="fragment_welcome"        tools:layout="@layout/fragment_welcome" >        <action            android:id="@+id/action_welcomeFragment_to_selectFovoriteFragment"            app:destination="@id/selectFovoriteFragment" />    </fragment>    <fragment        android:id="@+id/selectFovoriteFragment"        android:name="uz.coder.dagger2example.SelectFavoriteFragment"        android:label="fragment_select_fovorite"        tools:layout="@layout/fragment_select_fovorite" /></navigation>